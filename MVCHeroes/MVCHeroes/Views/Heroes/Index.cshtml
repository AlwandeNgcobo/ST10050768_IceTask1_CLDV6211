@model IEnumerable<MVCHeroes.Models.Heroes>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Heroes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SuperHero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Powers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SuperHero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Powers)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
